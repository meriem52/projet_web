{% extends 'admin/index.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Contact Form Message Edit</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="../index.html.twig">Home</a></li>
                            <li class="breadcrumb-item active">Edit Message</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Title</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">


                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reservation[0].id }}</td>
                        </tr>
                        <tr>
                            <th>Client </th>
                            <td><a href="{{ path('admin_user_show', {'id': reservation[0].client_id}) }}"></a></td>
                        </tr>
                        <tr>
                            <th>Date d'entr√©e</th>
                            <td>{{ reservation[0].date_entree ? reservation[0].date_entree|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de sortie</th>
                            <td>{{ reservation[0].date_sortie ? reservation[0].date_sortie|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Nombre de nuits</th>
                            <td>{{ reservation[0].nombre_nuits }}</td>
                        </tr>
                        <tr>
                            <th>Prix total</th>
                            <td>{{ reservation[0].prix_total }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>{{ reservation[0].statut }}</td>
                        </tr>
                        </tbody>
                    </table>



                    <a href="{{ path('admin_reservation_edit', {'id': reservation[0].id}) }}">edit</a>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    Footer
                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}